---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="hero-media" aria-label="Portrait photo">
					<Image
						src="/photo.jpeg"
						width={320}
						height={320}
						alt="Portrait of Alejandro Abaroa"
						loading="eager"
					/>
				</div>
				<div class="hero-text">
					<h1>Hello! I'm Alejandro Abaroa</h1>
					<p>I'm a software engineer with a passion for design, UI/UX, and building products that people love.</p>
					<p>I've worked at companies like Thermo Fisher Scientific, Samsung Electronics, Upsun (formerly Platform.sh).</p>
					<p>Here's my <a href="/AlexAbaroaCV.pdf" target="_blank">resume</a>.</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 2rem;
	}

	.hero-text :global(h1) {
		margin-bottom: 0.75rem;
	}

	.hero-media {
		display: flex;
		justify-content: center;
	}

	@media (max-width: 720px) {
		.hero {
			grid-template-columns: 1fr;
		}
		.hero-media {
			order: -1;
		}
	}
</style>
